<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
    <% if @tweet.errors.any? %>
        <div id="error_explanation">
            <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
            <ul>
                <% @tweet.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

<script type="text/javascript">
$(function() {
    $('#tweet_content').bind('keydown keyup keypress change',function(){
		var thisValueLength = $(this).val().length;
		$('#count').html(thisValueLength);
		if(thisValueLength > 140){
	        $('#count').css('color', 'red');
        }
        else if(thisValueLength > 135){
	        $('#count').css('color', 'orange');
        }
        else{
            $('#count').css('color', 'black');
        }
        
	});
});
</script>

